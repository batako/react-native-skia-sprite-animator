{
  "name": "react-native-skia-sprite-animator",
  "version": "0.6.2",
  "description": "Sprite animation primitives for React Native Skia with Expo-friendly storage helpers.",
  "keywords": [
    "react-native",
    "expo",
    "skia",
    "react-native-skia",
    "sprite",
    "sprite-animation",
    "animation"
  ],
  "license": "MIT",
  "author": {
    "name": "batako",
    "url": "https://batako.net"
  },
  "contributors": [
    {
      "name": "Batako Studio",
      "url": "https://github.com/BatakoStudio"
    }
  ],
  "sideEffects": false,
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "clean": "rimraf dist",
    "format": "prettier --write . \"!examples/standalone-editor/ios\"",
    "format:check": "prettier --check . \"!examples/standalone-editor/ios\"",
    "lint": "eslint . --ext .ts,.tsx,.js",
    "test": "jest --config jest.config.cjs",
    "release": "npm ci && npm run build && npm publish --access public"
  },
  "dependencies": {
    "expo-document-picker": "^14.0.7",
    "expo-image-manipulator": "^14.0.7",
    "expo-localization": "^17.0.7",
    "expo-sharing": "^14.0.7"
  },
  "devDependencies": {
    "@shopify/react-native-skia": "^2.3.10",
    "@types/jest": "^29.5.12",
    "@types/react": "^19.1.1",
    "@types/react-test-renderer": "^18.3.0",
    "eslint": "^9.39.1",
    "eslint-config-expo": "^10.0.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jsdoc": "^61.1.12",
    "eslint-plugin-prettier": "^5.5.4",
    "expo-file-system": "^19.0.17",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.2.0",
    "prettier": "^3.6.2",
    "react": "^19.2.0",
    "react-native": "0.82.1",
    "react-test-renderer": "^19.2.0",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3"
  },
  "peerDependencies": {
    "@shopify/react-native-skia": ">=2.3.0",
    "expo-file-system": ">=19.0.0",
    "react": ">=19.0.0",
    "react-native": ">=0.81.0"
  }
}
